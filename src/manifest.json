{
    "manifest_version": 2,
    "version": "1.0",
    "name": "Code copy and Search",
    "description": "Add one-click copy button for code blocks and enable search selected text on different search engines.",
    "icons": {
        "128": "icon128.png",
        "48": "icon48.png",
        "16": "icon16.png"
    },
    "page_action":{
        "default_icon":"icon16.png",
        "default_popup":"popup.html",
        "default_title": "Code copy and Search"
    },

    "background":{
        "scripts":["eventPage.js"],
        "persistent": false
    },
    "permissions":[
        "tabs",
        "<all_urls>",
        "storage",
        "contextMenus",
        "tts"
    ],
    "web_accessible_resources": [
        "*.*"
    ],
    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "js":["jquery-3.4.1.min.js","content.js","bootstrap.bundle.min.js"]
        }
    ]
}
